<h1>Blog Posts</h1>

<% if @posts.present? %>
  <% @posts.each do |post| %>
    <%= link_to post.title, post %>
    <p><%= post.body %></p>
    <p>Category: <%= post.category_name %></p>
    <p>Created by: <%= post.user.full_name %></p>
    <p>Date Created - <%= post.created_at.strftime("%Y-%m-%d") %></p>
    <hr>
  <% end %>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>

<%= paginate @posts %>
